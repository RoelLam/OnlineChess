package com.example.bewerking;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.database.Bord;
import com.example.database.SchaakVeld;
import com.example.repository.BordManipulatie;
import com.example.repository.VeldManipulatie;

public class Bewerking {
	@Autowired
	private VeldManipulatie dataVeld;
	private BordManipulatie dataBord;
	
	@RequestMapping("bordmaken")
	public Bord createBord(){
		Bord bord = new Bord();
		List<SchaakVeld> lijst;
		
		for(int i=0;i<8;i++){
			for(int j=0;j<8;j++){
				List<Integer> coords = new ArrayList<Integer>({i,j});
				coords.add(i); coords.add(j);
				lijst.add(createVeld(coords));
			}
		}
		dataBord.save(lijst);		
	}
	
	
	@RequestMapping("veldmaken")
	public SchaakVeld createVeld(List<Integer> coords){
		SchaakVeld veld = new SchaakVeld();
		veld.setCoords(coords);
		veld.setVakNaam("Veld" + coords[0] + "" + coords[1]);
		dataVeld.save(veld);
		return veld;
	}
		
}
